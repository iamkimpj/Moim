<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/id_label1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="지역"
            android:textAlignment="center"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/gLocal_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pass_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="모임이름"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/gTitle_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="time" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.94"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="모임소개"
            android:textAlignment="center"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/gIntro_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gPeople_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="공개여부"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="30dp" />

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="264dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">



                <RadioButton
                    android:id="@+id/gPublic_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공개" />

                <RadioButton
                    android:id="@+id/gSecret_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="비공개" />



        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="gCreate_btnclick"
        android:text="모임 개설" />

</LinearLayout>